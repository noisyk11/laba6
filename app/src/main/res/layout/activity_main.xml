<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Заголовок -->
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextTitle"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:hint="Заголовок"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Сообщение -->
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextMessage"
        android:layout_width="410dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:hint="Сообщение"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTitle" />

    <!-- Кнопка выбора даты -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSetDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Выбрать дату"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editTextMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка выбора времени -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSetTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Выбрать время"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSetDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка сохранения напоминания -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSaveReminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сохранить напоминание"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSetTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка просмотра всех напоминаний -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonViewReminders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Просмотреть напоминания"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSaveReminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
